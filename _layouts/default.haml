!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title AELOGICA Style Guide
    %link{:href => "http://fonts.googleapis.com/css?family=Inconsolata", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Anonymous+Pro", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/screen.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}/
    /[if IE]
      <link href="{{ site.url }}stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
  %body
    %section#container
      #ae
        %a{:href => "/", :title => "aelogica"}
          %img{:src => "/images/ae.png", :alt => "aelogica logo", :title => "aelogica logo"}/

      %header
        #logo
          %a{:href => "http://aelogica.com"}
            %img{:alt => "creative mobile & web development", :title => "creative mobile & web development", :src => "/images/cwmd.png"}/

      %nav{:role => "navigation"}
        %ul
          {% for element in page.menu %}
          {% if element.url == page.url %}
          %li
            %a{:class => "menu-item current", :href => "{{ site.url }}/styleguide/{{ element.url }}"} {{ element.label }}
          {% else %}
          %li
            %a{:class => "menu-item", :href => "{{ site.url }}/styleguide/{{ element.url }}"} {{ element.label }}
          {% endif %}
          {% endfor %}

      %section#main-content.markdown
        {{ content }}

      %footer
        %p
          Hosted on Github Pages

    %script{:src => "{{ site.url }}javascripts/jquery-1.7.2.min.js", :type => "text/javascript"}
    %script{:src => "{{ site.url }}javascripts/jquery.snippet.min.js", :type => "text/javascript"}
    %script{:src => "{{ site.url }}javascripts/main.js", :type => "text/javascript"}
